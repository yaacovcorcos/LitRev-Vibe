{
  "name": "litrev-vibe",
  "version": "1.0.0",
  "description": "An AI-assisted medical literature review and authoring workspace. The MVP is being built as a single-user “Parent” release with automation guardrails designed for autonomous coding agents.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "seed": "pnpm exec ts-node --transpile-only prisma/seed.ts",
    "prisma:format": "pnpm exec prisma format",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:diff": "pnpm exec prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script",
    "format:check": "echo \"format placeholder\"",
    "lint": "next lint",
    "test": "pnpm exec vitest run",
    "playwright:test": "pnpm exec playwright test",
    "storybook:test": "pnpm exec storybook dev --ci --smoke-test",
    "worker": "pnpm exec ts-node --transpile-only src/scripts/run-worker.ts",
    "queue:smoke": "REDIS_URL=redis://localhost:6379 pnpm run worker",
    "integrity:ingest": "pnpm exec ts-node --transpile-only src/scripts/ingest-integrity-feeds.ts",
    "storybook": "pnpm exec storybook dev -p 6006",
    "storybook:build": "pnpm exec storybook build",
    "chromatic": "if [ -z \"$CHROMATIC_PROJECT_TOKEN\" ]; then echo 'Chromatic token not set; skipping'; else pnpm exec chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes; fi",
    "dev": "next dev",
    "build": "next build",
    "start": "next start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "8.6.14",
    "@types/node": "^24.7.2",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "chromatic": "^13.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.11",
    "postcss": "^8.5.6",
    "prisma": "^6.17.1",
    "storybook": "^8.6.14",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^6.0.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@citation-js/core": "^0.7.21",
    "@citation-js/plugin-csl": "^0.7.21",
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.3",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tiptap/extension-placeholder": "^3.7.0",
    "@tiptap/react": "^3.7.0",
    "@tiptap/starter-kit": "^3.7.0",
    "bullmq": "^5.61.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "docx": "9.0.3",
    "ioredis": "^5.8.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.545.0",
    "next": "14.2.11",
    "node-cron": "^3.0.3",
    "openai": "^6.3.0",
    "pino": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.12"
  }
}
